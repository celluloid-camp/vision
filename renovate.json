{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "pyproject"
  ],
  "python": {
    "enabled": true,
    "fileMatch": [
      "^pyproject\\.toml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["pyproject"],
      "groupName": "minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "schedule": ["before 10am on monday"]
    },
    {
      "matchManagers": ["pyproject"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update"]
    },
    {
      "matchPackageNames": [
        "fastapi",
        "uvicorn",
        "hypercorn"
      ],
      "groupName": "FastAPI ecosystem",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "opencv-python",
        "mediapipe",
        "numpy",
        "scenedetect"
      ],
      "groupName": "Computer vision libraries",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "labels": ["dependencies", "computer-vision"]
    },
    {
      "matchPackageNames": [
        "redis",
        "rq"
      ],
      "groupName": "Redis ecosystem",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^python$"],
      "enabled": false
    }
  ],
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "ignoreDeps": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": [],
    "automerge": false
  }
}

